# ============================================
# 应用配置
# ============================================

# 应用环境
NODE_ENV=development
APP_ENV=development

# 应用信息
APP_NAME=NovelCraft LLM
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# ============================================
# 服务器配置
# ============================================

# 服务器端口
PORT=3000
HOSTNAME=localhost

# ============================================
# 数据库配置
# ============================================

# SQLite数据库路径
DATABASE_URL=file:./dev.db

# 数据库连接池
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================
# AI服务配置
# ============================================

# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# 备用AI服务 (可选)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# 本地LLM配置 (可选)
LOCAL_LLM_URL=http://localhost:11434
LOCAL_LLM_MODEL=llama2

# ============================================
# 认证和安全
# ============================================

# JWT配置
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 密码哈希配置
BCRYPT_SALT_ROUNDS=12 # bcrypt哈希成本因子，推荐值≥12

# 会话配置
SESSION_SECRET=your_session_secret_here_change_in_production
SESSION_MAX_AGE=604800 # 7 days in seconds

# CORS配置
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ============================================
# 缓存配置
# ============================================

# Redis配置 (可选)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# ============================================
# 文件存储
# ============================================

# 文件上传配置
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# 存储路径
UPLOAD_DIR=./uploads
LOG_DIR=./logs

# ============================================
# 日志配置
# ============================================

# 日志级别
LOG_LEVEL=info
LOG_FORMAT=combined

# ============================================
# 监控和性能
# ============================================

# 性能监控 (可选)
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here

# ============================================
# 第三方服务
# ============================================

# 邮件服务 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here
SMTP_FROM=noreply@novelcraft.com

# 对象存储 (可选)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name_here

# ============================================
# 功能开关
# ============================================

# 功能标志
FEATURE_AI_GENERATION_ENABLED=true
FEATURE_USER_REGISTRATION_ENABLED=true
FEATURE_PAYMENT_ENABLED=false
FEATURE_ANALYTICS_ENABLED=true

# 速率限制
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# 开发专用配置
# ============================================

# 开发模式配置
DEBUG=true
VERBOSE_LOGGING=true

# 测试数据库
TEST_DATABASE_URL=file:./test.db

# 注意：生产环境必须修改所有包含"your_"前缀的配置项
# 并将敏感信息存储在安全的密码管理器中